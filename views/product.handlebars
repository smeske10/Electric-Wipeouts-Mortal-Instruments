<section class="product container container-fluid">
  <img src="/images/{{product.name}}.jpg" alt="{{this.description}}" />
  <div class="product-details">
    <h3>{{product.name}}</h3>
    <p id="price">Price: ${{product.price}}</p>
    <p id="stock">Stock: {{product.stock}}</p>
    {{#if (isEmpty product.stock)}}
    <button id="addBtn" data-id="{{product.id}}" class="btn btn-primary">
      Add to cart</button>
      {{/if}}
    <br /><br />
    <div>
      <p>Product Description:</p>
      <p>{{product.description}}</p>
    </div>
  </div>
</section>
