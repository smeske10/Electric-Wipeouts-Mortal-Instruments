<div class="row">
    <div class="col-auto">
        <h2> Welcome {{name}}! View your cart </h2>
    </div>
</div>
<div>
{{#each products as |product| }}
    <div class="row align-center mb-5">
  <div class="col-md-6">
      <h2><a href="/product/{{product.id}}">{{product.name}}</a></h2>
    </div>
  <div class="col-md-6">
      <p>img here</p>
    <h3>{{price}}</h3>
    <div class="col-md-4"></div>
     <button type="button" class="btn btn-sm btn-danger" data-id="{{product.id}}">
          Remove
      </button>
  </div>
</div>
{{/each}}
<div class="row mt-4">
  <div class="col-md-6">
      <button type="button" class="btn btn-primary">
          Checkout cart
      </button>
      <h4>
          <a href="/">Continue shopping</a>
      </h4>
  </div>
</div>
    
